<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header center aligned">Create New Post</div>
    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" placeholder="Post Title">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="post[body]"></textarea>
        </div>
        <div class="field">
            <label>Tags</label>
            <input type="text" name="post[tags]" placeholder="Post Tags">
        </div>

        <input class="ui red basic button" type="submit">
    </form>
</div>

<%- include ('partials/footer') %>