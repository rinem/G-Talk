<%- include ('partials/header') %>

<div class="ui main text container">
    <div class="ui huge header center aligned">
        Top Posts
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% posts.forEach( post => { %>
            <div class="item">
                <div class="content">
                    <a href="/<%= post._id %>" class="header"><%= post.title %></a>
                    <div class="meta">
                        <span><%= post.date.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%= post.body.substring(0, 100) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated violet button" href="/posts/<%= post._id %>">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>


<%- include ('partials/footer') %>